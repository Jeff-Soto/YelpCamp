<div class="container">
    <div class="row justify-content-center align-items-center newForm">
        <div class="col-xs-12">
            <h1 class="text-center">New Campground Form</h1>
            <hr>
            <form>
              <div class="form-group">
                <label for="name">Name of Campground</label>
                <input type="text" class="form-control" id="name" placeholder="Campground Name">
              </div>
              <div class="form-group">
                <label for="description">Description of Campground</label>
                <textarea class="form-control" id="description" rows="5" placeholder="Campground Description"></textarea>
              </div>
              <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>    
