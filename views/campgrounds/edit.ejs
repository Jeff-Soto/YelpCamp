<% include ../partials/header.ejs %>
<div class="container">
    <div class="row justify-content-center align-items-center newForm">
        <div class="col-xs-12">
            <h1 class="text-center">Edit <%= campground.name %></h1>
            <hr>
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
              <div class="form-group">
                <label>Campground Name: </label>
                <input type="text" class="form-control" name="name" value="<%=campground.name%>">
              </div>
              <div class="form-group">
                <label>Campground Description: </label>
                <textarea class="form-control" name="description" rows="5"><%=campground.description%></textarea>
              </div>
