<% include ../partials/header.ejs %>
<div class="container">
    <div class="row justify-content-center align-items-center newForm">
        <div class="col-xs-12">
            <h1 class="text-center">Edit Comment</h1>
            <hr class="formHR">
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
              <div class="form-group">
                <label>Comment Text: </label>
                <textarea class="form-control" name="comment[text]" rows="5" placeholder="body" required><%= comment.text %></textarea>
              </div>
              <input type="submit" class="btn btn-success">
            </form>
        </div>
    </div>
</div>    
